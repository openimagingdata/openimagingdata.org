{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Wrapper",
    "definitions": {
        "Wrapper": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "data_element_set": {
                    "$ref": "#/definitions/DataElementSet"
                }
            },
            "required": [
                "$schema",
                "data_element_set"
            ],
            "title": "Wrapper"
        },
        "DataElementSet": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^RDES\\d+"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string",
                    "description": "plain text, or XHTML div are acceptable"
                },
                "version": {
                    "$ref": "#/definitions/Version"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "index_codes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/IndexCode"
                    }
                },
                "body_parts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/BodyPart"
                    }
                },
                "authors": {
                    "$ref": "#/definitions/Authors"
                },
                "history": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Event"
                    }
                },
                "specialty": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Specialty"
                    }
                },
                "elements": {
                    "$ref": "#/definitions/Elements"
                }
            },
            "required": [
                "id",
                "name",
                "description",
                "version",
                "elements",
                "history",
                "index_codes",
                "specialty"
            ],
            "title": "DataElementSet"
        },
        "Event": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "status": {
                    "$ref": "#/definitions/Status"
                }
            }
        },
        "Image": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "height": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                },
                "width": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                },
                "caption": {
                    "type": "string"
                },
                "rights": {
                    "type": "string"
                },
                "authors": {
                    "$ref": "#/definitions/Authors"
                },
                "references": {
                    "$ref": "#/definitions/References"
                }
            },
            "required": [
                "url"
            ],
            "title": "Image"
        },
        },
        "BiologicalSex": {
            "type": "string",
            "enum": ["M", "F"]
        },
        "Authors": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "person": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Person"
                    }
                },
                "organization": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Organization"
                    }
                }
            },
            "title": "Authors"
        },
        "Person": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "orcid_id": {
                    "type": "string"
                },
                "twitter_handle": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "role": {
                    "type": "string",
                    "enum": ["author", "editor", "translator", "reviewer", "contributor"]
                }
            },
            "required": [
                "name"
            ],
            "title": "Person"
        },
        "Elements": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "element": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Element"
                    }
                }
            },
            "required": [
                "element"
            ],
            "title": "Elements"
        },
        "Element": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "parent_set": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "definition": {
                    "type": "string"
                },
                "version": {
                    "$ref": "#/definitions/Version"
                },
                "index_codes": {
                    "$ref": "#/definitions/IndexCodes"
                },
                "specialty": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Organization"
                    }
                },
                "integer_values": {
                    "$ref": "#/definitions/IntegerValues"
                },
                "value_set": {
                    "$ref": "#/definitions/ValueSet"
                }
            },
            "required": [
                "definition",
                "id",
                "name",
                "parent_set",
                "version"
            ],
            "title": "Element"
        },
        "BodyPart": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "index_codes": {
                    "$ref": "#/definitions/IndexCode"
                }
            }
            "required": [
                "name"
            ]
        },
        "IndexCode": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "system": {
                    "type": "string",
                    "enum": ["RADLEX", "SNOMEDCT", "LOINC"]
                },
                "code": {
                    "type": "string"
                },
                "href": {
                    "type": "string",
                    "format": "uri"
                },
                "display": {
                    "type": "string"
                }
            }
        },
        "IntegerValues": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "min": {
                    "type": "string",
                    "format": "integer"
                },
                "max": {
                    "type": "string",
                    "format": "integer"
                },
                "step": {
                    "type": "string",
                    "format": "integer"
                },
                "unit": {
                    "type": "string"
                }
            },
            "required": [
                "max",
                "min",
                "step",
                "unit"
            ],
            "title": "IntegerValues"
        },
        "Organization": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "abbreviation": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "comment": {
                    "type": "string"
                },
                "role": {
                    "type": "string",
                    "enum": ["author", "sponsor", "translator", "reviewer", "contributor"]
                }
            },
            "required": [
                "name"
            ],
            "title": "Organization"
        },
        "ValueSet": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "min_cardinality": {
                    "type": "string",
                    "format": "integer"
                },
                "max_cardinality": {
                    "type": "string",
                    "format": "integer"
                },
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Value"
                    }
                }
            },
            "required": [
                "max_cardinality",
                "min_cardinality",
                "value"
            ],
            "title": "ValueSet"
        },
        "Value": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "index_codes": {
                    "$ref": "#/definitions/ValueIndexCodes"
                }
            },
            "required": [
                "index_codes",
                "name",
                "value"
            ],
            "title": "Value"
        },
        "ValueIndexCodes": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "index_code": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Modality"
                    }
                }
            },
            "required": [
                "index_code"
            ],
            "title": "ValueIndexCodes"
        },
        "Modality": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "system": {
                    "type": "string",
                    "enum": ["RADLEX"]
                },
                "code": {
                    "type": "string",
                    "enum": ["CT", "FL", "MR", "NM", "PET", "US", "XR"]
                },
                "url": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "^http://radlex.org/RID/RID103(21|61|12|30|37|26|45)$"
                },
                "name": {
                    "type": "string",
                    "enum": ["Computed Tomography", 
                        "Fluoroscopy", 
                        "Magnetic Resonance Imaging", 
                        "Nuclear Medicine", 
                        "Positron Emission Tomography", 
                        "Ultrasound", 
                        "Projection Radiography"]
                }
            },
            "required": [
                "code",
                "system",
                "url",
                "name"
            ],
            "title": "Modality"
        },
        "Specialty": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "abbreviation": {
                    "type": "string",
                    "enum": ["AB", "BR", "CA", "CH", "ER", "GI", "GU", "HN", "IR", "MI", "MK", "NR", "OB", "OI", "OT", "PD", "QI", "RS", "VI"]
                }
            },
            "required": [
                "name", 
                "abbreviation"
            ],
            "title": "Specialty"
        },
        "Version": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "status": {
                    "$ref": "#/definitions/Status"
                }
            },
            "required": [
                "date",
                "name",
                "status"
            ],
            "title": "Version"
        },
        "Status": {
            "type": "string",
            "enum": ["proposed", "published", "retired"]
        },
        "References": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "reference": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Reference"
                    }
                }
            },
            "required": [
                "reference"
            ],
            "title": "References"
        },
        "Reference": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "citation": {
                    "type": "string"
                },
                "doi_url": {
                    "type": "string",
                    "format": "uri"
                },
                "pubmed_id": {
                    "type": "string",
                    "format": "integer"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "citation"
            ],
            "title": "Reference"
        }
    }
}
